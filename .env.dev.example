# SOPA Backend - Development Environment Configuration
# Copy this file to .env.dev and configure according to your setup

# Database Configuration
DATABASE_URL="postgresql://sopa_user:sopa_pass@sopa_postgres_dev:5432/sopa_db"

# Neon Cloud Database for data synchronization
# Replace with your actual Neon database URL
NEON_DATABASE_URL="postgresql://username:password@your-neon-host:5432/your_database"

# Redis Configuration
REDIS_URL="redis://sopa_redis_dev:6379"

# Application Settings
ENVIRONMENT="development"
PROJECT_NAME="SOPA Backend API"
DEBUG=true
LOG_LEVEL="debug"

# CORS Settings
ALLOWED_HOSTS="localhost,127.0.0.1,0.0.0.0"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
