# SOPA Backend - Production Environment Configuration
# Copy this file to .env.prod and configure with your production values
# SECURITY: Change these values in production!

# Database Configuration - Use your production database
DATABASE_URL="postgresql://sopa_user:your_secure_password_here@postgres:5432/sopa_prod"
POSTGRES_DB=sopa_prod
POSTGRES_USER=sopa_user
POSTGRES_PASSWORD=your_secure_password_here

# Neon Cloud Database for data synchronization
# Replace with your actual Neon database URL
NEON_DATABASE_URL="postgresql://username:password@your-neon-host:5432/your_database"

# Redis Configuration - Use your production Redis
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD=your_redis_password_here

# Application Settings
ENVIRONMENT="production"
PROJECT_NAME="SOPA API - Production"
DEBUG=false
LOG_LEVEL="info"
API_PORT=8000

# CORS Settings - Configure for your production domains
ALLOWED_HOSTS="yourdomain.com,www.yourdomain.com,api.yourdomain.com"

# Rate Limiting - Adjust for production load
RATE_LIMIT_PER_MINUTE=60

# Security Settings (add any additional production-specific settings)
# API_KEY_SECRET="your-secret-key"
# JWT_SECRET="your-jwt-secret"
